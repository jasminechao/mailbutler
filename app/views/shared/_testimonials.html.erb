<div class="testimonials container">
  <div class="row">
      <% @testimonials.each do |testimonial| %>
    <div class="card-container col-xs-12 col-lg-4">
      <div class="card text-center">
        <%= cl_image_tag(testimonial.cloundinary_img_id, width: 100, height: 100, :crop => :thumb, :gravity => :face, class: "testimonial_avatar") %>
        <p class="testimonial_quote"><em><%= testimonial.quote %></em></p>
        <p><strong><%= testimonial.name %></strong></p>
        <% if testimonial.company.present? %>
          <p><%= testimonial.position %><strong>, <%= testimonial.company %></strong></p>
        <% else %>
          <p><%= testimonial.position %></p>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
