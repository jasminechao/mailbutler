<div class="testimonials container">
  <div class="row">
    <div class="card-container">
      <% @testimonials.each do |testimonial| %>
      <div class="card text-center">
        <%= cl_image_tag(testimonial.cloundinary_img_id, width: 100, height: 100, :crop => :thumb, :gravity => :face) %>
        <p><%= testimonial.quote %></p>
        <p><strong><%= testimonial.name %></strong></p>
        <p><%= testimonial.position %></p>, <strong><%= testimonial.company %></strong></p>
      </div>
      <% end %>
    </div>
  </div>
</div>
